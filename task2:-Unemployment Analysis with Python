# Step 1: Import Libraries
import pandas as pd
import matplotlib.pyplot as plt
import seaborn as sns

# Step 2: Load Dataset
df = pd.read_csv("/content/Unemployment in India.csv")  # Replace with your dataset filename

# Step 3: Explore Dataset
print(df.head())
print(df.info())
print(df.describe())

# Step 4: Check missing values
print("\nMissing values:\n", df.isnull().sum())

# Step 5: Convert date column to datetime format
df['Date'] = pd.to_datetime(df['Date'])

# Step 6: Plot unemployment trends
plt.figure(figsize=(10,6))
sns.lineplot(x='Date', y='Unemployment Rate', data=df, marker='o')
plt.title("Unemployment Rate Over Time", fontsize=16)
plt.xlabel("Date")
plt.ylabel("Unemployment Rate (%)")
plt.grid(True)
plt.show()

# Step 7: Region-wise unemployment analysis
if 'Region' in df.columns:
    plt.figure(figsize=(12,6))
    sns.boxplot(x='Region', y='Unemployment Rate', data=df)
    plt.xticks(rotation=45)
    plt.title("Region-wise Unemployment Rate")
    plt.show()

# Step 8: Pre-COVID vs During-COVID comparison
covid_start = "2020-03-01"
df['Period'] = df['Date'].apply(lambda x: 'Pre-COVID' if x < pd.to_datetime(covid_start) else 'During-COVID')

plt.figure(figsize=(8,5))
sns.barplot(x='Period', y='Unemployment Rate', data=df, ci=None)
plt.title("Average Unemployment Rate Before & During COVID")
plt.show()
